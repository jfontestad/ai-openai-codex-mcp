{
  "name": "openai-responses-mcp",
  "version": "0.6.0",
  "description": "Lightweight MCP server (Responses API core). OpenAI integration + web_search.",
  "type": "module",
  "private": true,
  "bin": {
    "openai-responses-mcp": "build/index.js"
  },
  "files": [],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test:unit": "node --import tsx --test tests/config-codex.test.ts tests/codex-paths.test.ts tests/codex-loader.test.ts tests/auth-resolve.test.ts",
    "clean": "node scripts/clean.js",
    "build:clean": "npm run clean && tsc -p tsconfig.json",
    "dev": "tsx src/index.ts",
    "start": "node build/index.js",
    "mcp:stdio": "node build/index.js --stdio",
    "mcp:smoke": "node scripts/mcp-smoke.js",
    "mcp:smoke:ldjson": "node scripts/mcp-smoke-ldjson.js",
    "mcp:smoke:ping": "node scripts/mcp-smoke-ping.js",
    "health": "node --import tsx scripts/health-check.ts",
    "mcp:quick": "node scripts/mcp-smoke-quick.js",
    "test": "npm run test:unit && npm run build && node scripts/test-tools-list.js && node scripts/test-cancel-noinflight.js && node scripts/test-cancel-during-call.js",
    "test:tools-list": "node scripts/test-tools-list.js",
    "test:cancel-noinflight": "node scripts/test-cancel-noinflight.js",
    "test:cancel-during-call": "node scripts/test-cancel-during-call.js"
  },
  "dependencies": {
    "openai": "^5.10.2",
    "yaml": "^2.5.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "tsx": "^4.20.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=20"
  },
  "license": "MIT",
  "keywords": [
    "openai",
    "responses-api",
    "mcp",
    "model-context-protocol",
    "stdio",
    "mcp-server",
    "typescript",
    "cli",
    "web-search",
    "codex",
    "claude",
    "code"
  ]
}
